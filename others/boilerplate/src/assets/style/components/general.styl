@require '/vars'

// Settings gerais
body
	font-family: 'Merriweather', serif
	width: 100%
	font-size: $def-f-size
	font-weight: 300
	line-height: 1
	&.noscroll
		overflow: hidden
p
div
	font-size: $def-f-size
	font-weight: 300
	.versalete
		font-size: 1.2em
h1
h2
h3
h4
h5
	font-size: $def-f-size
	font-weight: 400

section
	margin: 50px 0
	max-width: 100vw

main
	margin-bottom: 130px

.versalete
	font-variant: small-caps

button
.button
	@extend $buttons


