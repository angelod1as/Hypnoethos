@require '/vars'

.home
	.inicio
		min-height: 50vh
		display: flex
		.phrase
			flex-grow: 0
			display: flex
			align-items: center
			justify-content: center
			blockquote
				width: 50%
				p
					font-size: 1.5em
					line-height: 1.2em
				small
					font-size: 1em
					line-height: 2em
		.logo
			flex-grow: 0
			margin-right: 20%
			display: flex
			img
				align-self: center
				width: 100%
				height: auto
				max-width: 280px

	.bio
		display: flex
		align-items: center
		img
			width: 250px
		.text
			color: white
			font-size: 1em
			margin: 5%
			margin-right: 0
			p
				font-size: 0.9em
		figure
			margin: 5%
			text-align: center
			figcaption
				margin-top: 10px
				span
					font-size: 1.4em
					display: block
