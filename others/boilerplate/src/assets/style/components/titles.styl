@require '/vars'

.title
	padding: 0 20px
	margin: 100px auto 20px auto
	position: relative
	max-width: 900px
	&__first
		font-size: 5.5vw
		display: block
		font-weight: 300
		@media (min-width: 901px)
			font-size: 50px
		@media (max-width: 700px)
			font-size: 60px
		@media (max-width: 510px)
			font-size: 25px
	&__second
		font-size: 9.3vw
		display: block
		font-weight: 700
		white-space: nowrap
		@media (min-width: 901px)
			font-size: 90px
		@media (max-width: 700px)
			white-space: normal
			font-size: 80px
		@media (max-width: 510px)
			white-space: normal
			font-size: 45px
	&__italic
		font-style: italic
		font-size: 80px
		font-weight: 300
		display: block
		text-align: center
		@media (max-width: 510px)
			font-size: 50px

.subtitle
	@extend $width
	padding: 0 20px
	margin-bottom: 40px
	position: relative
	font-size: 3em
	line-height: 1.3em
	&::before
		content: url('../images/hand.png')
		position: absolute
		left: -70px
		@media (max-width: 880px)
			display: none
	@media (max-width: 510px)
		font-size: 2em
