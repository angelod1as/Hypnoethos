.text
	h1
	h2
	h3
	h4
		font-weight: bold
		margin: 0 0 0 30px
		position: relative
		color: $roxo
		&:after
			font-weight: 100
			content: '>'
			position: absolute
			top: 0
			left: -30px
			color: $amarelo
	h1
		font-size: 1.7em
		line-height: 2em
	h2
		font-size: 1.3em
		line-height: 2em
	h3
		font-size: 1em
		line-height: 2em
	h4
		line-height: 2em
		font-style: normal
