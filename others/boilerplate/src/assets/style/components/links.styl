@require '/vars'
a
	position: relative
	text-decoration: none
	display: inline-block
	color: black
	padding: 0 1px
	-webkit-transition: color ease 0.3s
	transition: color ease 0.3s
	&:hover
		color: white
	&:after
		content: ''
		position: absolute
		z-index: -1
		width: 100%
		height: 5%
		left: 0
		bottom: 0
		background-color: black
		color: white
		transition: all ease 0.3s
	&:hover::after
		height: 100%
.form
	a
		position: initial
		text-decoration: none
		display: block
		color: black
		padding: 0
		transition: none
		&:hover
			color: white
		&:after
			content: none
