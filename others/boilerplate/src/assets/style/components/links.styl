@require '/vars'
a
	font-style: italic
	color: $roxo
	transition: color ease 0.2s
	cursor: pointer
	font-size: 1em
	box-shadow: inset 0 0px 0 white, inset 0 -1px 0 $amarelo
	&:hover
		color: $amarelo
		background-color: $roxo
.form
	a
		position: initial
		text-decoration: none
		display: block
		color: black
		padding: 0
		transition: none
		&:hover
			color: white
		&:after
			content: none

a.button_link
	font-style: normal
	box-shadow: none
	text-decoration: none !important
	&:hover
		background-color: transparent
