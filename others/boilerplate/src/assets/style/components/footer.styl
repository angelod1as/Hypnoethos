@require '/vars'

footer
	border-top: 2px solid white
	background-color: white
	color: white
	width: 100%
	height: auto
	z-index: 1000

	a
		text-decoration: none
		color: white
		&:hover
			color: black
	.down
		display: flex
		align-items: center
		justify-content: space-between
	.left
	.right
	.top
		display: flex
		align-items: center
		justify-content: center
		padding: 0
		margin: 0
		height: 38px
		cursor: pointer
		background-color: black
		text-align: center
		width: calc(50% - 1px)
		transition: background-color 0.2s, font-weight 0.2s ease 0.2s
		p
			text-align: center
			font-size: 0.8em
		&:hover
			color: black
			background-color: white
			border: none
			p
				font-weight: bold
				font-size: 1rem
	.top
		display: none
		width: 100%
		border-bottom: 2px solid white
		border-top: 1px solid white
		&:hover
			border-bottom: 2px solid white
		.modal__carrinho
			border-bottom: 2px solid white
			transition: 0.2s ease
			&.animate
				border-bottom: 25px solid white
