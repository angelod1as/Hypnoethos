							label(for='name') Nome:
							input(name='name', placeholder='Nome')
						fieldset
							label(for='message') Quais edições e quantas quer comprar:
							textarea(name='message', rows='10', placeholder="Quero vinte e cinco cópias de todas as edições pra ontem!")
						fieldset
							label(for='email') E-mail:
							input(name='email', type='email', value='', required='', placeholder='seu.nome@email.com')
